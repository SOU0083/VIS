@model IEnumerable<DomainLayer.DomainModel.Event>

@{
    ViewData["Title"] = "Události";
}

<h2>Události</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Název
            </th>
            <th>
                Začátek
            </th>
            <th>
                Konec
            </th>
            <th>
                Rezervace od
            </th>
            <th>
                Rezervace do
            </th>
            <th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CanReserveFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CanReserveTo)
                </td>
                <td>
                    @Html.ActionLink("Smazat", "EventsDelete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


